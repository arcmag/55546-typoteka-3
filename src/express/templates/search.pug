extends layouts/layout.pug

block content
  main
    section.search-page
      .search-page__wrapper(class= isEmpty ? 'search-page__wrapper--empty' : '')
        h1 Поиск
        .search.search-page__form
          form(action='/search', method='get')
            label
              input(name='title', type='text', placeholder='Что ищем?' value= title)
            button.search__button.button.button--transparent(type='submit') Найти
          if !isEmpty
            each article in articles
              .search__result
                time.search__date(datetime=article.date_create)= article.date_create
                a.search__link(href=`/articles/${article.id}`)= article.title
        if isEmpty
          p.search-page__empty Ничего не нашлось

