extends layouts/layout.pug

block content
  main.main-page.main-page--padding
    section.main-page__publication.publication
      h1.publication__title Комментарии
      ul.publication__list
        each comment in comments
          li.publication__list-item
            form(method=`post` action=`/comment-delete/${comment.id}`)
              .publication__header
                img.publication__list-image(src=comment.author.avatarPath, width='20', height='20', alt='Аватар пользователя')
                b.publication__list-name= `${comment.author.name} ${comment.author.surname}`
                time.publication__item-time(datetime='2019-03-21T20:33')= comment.dateCreateCorrectFormat
              a.publication__item-text(href=comment.article.link)= comment.text
              p.publication__text-strong= comment.article.title
              button.publication__button.button.button--close-item(type='submit')
                span.visually-hidden Закрыть строку списка
