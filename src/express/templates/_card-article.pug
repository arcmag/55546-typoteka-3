li.preview__item(class= article.img ? `` : `preview__item--noimage`)
  ul.preview__breadcrumbs
    each category in article.categories
      li.preview__breadcrumbs-item
        a.preview__breadcrumbs-link(href=category.link)= category.title
  if article.img
    .preview__background
      img.preview__background-image(width="460", height="240", src=article.imgPath, style=`height: inherit`)
  time.preview__time(datetime=article.dateCreate)= article.dateCreateCorrectFormat
  h3.preview__name
    a.preview__name-link(href=article.link)= article.title
  p.preview__text= article.announce
  a.preview__comment(href=article.link)
    | Комментарии
    span.preview__cloud
    |
    b.preview__comment-count= (article.comments || []).length
